<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Voluntarios-Taize-Ielco</title>
    <link rel="icon" type="favicon/x-icon" href="/img/Taize-Logo-bl.png">
    <script src="https://kit.fontawesome.com/98eabfd565.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div id="container">
        <nav class="navbar navbar-expand-md navbar-dark">
            <a class="navbar-brandd" href="/inicio">
                <img src="/img/Taize-logo-bl.png" width="40" height="40">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse " id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto main-nav">
                    <li class="nav-item <%= typeof page !== 'undefined' && page === 'inicio' ? 'active' : '' %>">
                        <a class="nav-link" href="/">inicio</a>
                    </li>
                    <li class="nav-item <%= typeof page !== 'undefined' && page === 'historia' ? 'active' : '' %>">
                        <a class="nav-link" href="/historia">Historia</a>
                    </li>
                    <li class="nav-item <%= typeof page !== 'undefined' && page === 'actividades' ? 'active' : '' %>">
                        <a class="nav-link" href="/actividades">Actividades</a>
                    </li>
                    <li class="nav-item <%= typeof page !== 'undefined' && page === 'sobre-taize' ? 'active' : '' %>">
                        <a class="nav-link" href="/sobre-taize">sobre Taize</a>
                    </li>
                </ul>
                <ul class="navbar-nav" id="right-nav">
                    <% if(!currentUser){ %>
                    <li
                        class="nav-item nav-item__right <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>">
                        <a class="nav-link nav-link__right" href="/login">iniciar sesion</a>
                    </li>
                    <li
                        class="nav-item nav-item__right <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>">
                        <a class="nav-link nav-link__right" href="/register">Registrarse</a>
                    </li>
                    <% } else { %>
                    <li class="nav-item nav-item__right">
                        <span class="nav-link nav-link__right ">Iniciaste sesion como</span>
                    </li>
                    <li class="nav-item nav-item__right">
                        <span class="nav-link nav-link__right" href=""><%= currentUser.username %> |</span>
                    </li>
                    <li class="nav-item nav-item__right">
                        <a class="nav-link nav-link__right" href="/logout">cerrar sesion</a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </nav>

        <div id="header">
            <a id="logo-lg" href="#">
                <img id="logo-img" src="/img/Taize-logo-bl.png" width="100" height="100">
            </a>
            <!-- <img src="img/IMG-20151015-WA0007.jpg" class="card-img" alt="..."> -->
            <div id="card-img-overlay">
                <h3 id="card-title">Voluntarios Taize-Ielco</h3>
            </div>

            <div class="audio">

                <div id="title">
                    <span id="track"></span>
                    <div id="timer">0:00</div>
                    <div id="duration">0:00</div>
                </div>
                <!-- Controls -->
                <div class="controlsOuter">
                    <div class="controlsInner">
                        <div id="loading"></div>
                        <div class="btn1" id="playBtn"><i class="fas fa-play"></i></div>
                        <div class="btn1" id="pauseBtn"><i class="fas fa-pause"></i></div>
                        <div class="btn1" id="prevBtn"><i class="fas fa-caret-left"></i></div>
                        <div class="btn1" id="nextBtn"><i class="fas fa-caret-right"></i></div>
                    </div>
                    <div class="btn1" id="playlistBtn"><i class="fas fa-list-ul"></i></div>
                    <div class="btn1" id="volumeBtn"><i class="fas fa-volume-up"></i></div>
                </div>
                <!-- Progress -->
                <div id="waveform"></div>
                <div id="bar"></div>
                <div id="progress"></div>
                <!-- Playlist -->
                <div id="playlist">
                    <div id="list"></div>
                </div>
                <!-- Volume -->
                <div id="volume" class="fadeout">
                    <div id="barFull" class="bar"></div>
                    <div id="barEmpty" class="bar"></div>
                    <div id="sliderBtn"></div>
                </div>

            </div>

        </div>

        <%if(error && error.length > 0){%>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
        <% } %>
        <%if(success && success.length > 0){%>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
        <% } %>